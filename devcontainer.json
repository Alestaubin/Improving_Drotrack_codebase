// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip3 install --user -r requirements.txt",
	"postCreateCommand": "sudo apt-get update; sudo apt-get install ffmpeg libsm6 libxext6 libavcodec-dev  libavformat-dev  libavutil-dev  libswscale-dev -y; pip3 install --upgrade pip; pip3 install --user numpy pandas sympy opencv-python matplotlib jupyterlab notebook ipywidgets scipy scikit-fuzzy scikit-image tqdm",

	// Configure tool-specific properties.
	// "customizations": {},
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			// Set *default* container specific settings.json values on container create.
			// "settings": {},
			"extensions": ["ms-toolsai.jupyter"]
		}
	},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
	"mounts": [
  		"source=/Users/alexis.viau-cardinal/docker-share/opencv,target=/workspaces/python-opencv/resources,type=bind,consistency=cached",
		"source=/Users/alexis.viau-cardinal/references/repos/COMP558-FinalProject,target=/workspaces/python-opencv/repo,type=bind,consistency=cached"
	]
}
